@page
@model eStore.Pages.Admin.ManageProductsModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="text-center text-success"><i class="fas fa-box-open"></i> Quản lý Sản Phẩm</h2>

    <a href="/Admin/AddProduct" class="btn btn-primary mb-3">Thêm sản phẩm</a>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Hành Động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice.ToString("C")</td>
                    <td>@product.UnitsInStock</td>
                    <td>
                        <a href="/Admin/EditProduct?id=@product.ProductId" class="btn btn-warning btn-sm">Sửa</a>
                        <form method="post" asp-page-handler="DeleteProduct" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="ProductId" value="@product.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
