@page
@model eStore.Pages.Admin.AdminDashboardModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="text-center text-primary"><i class="fas fa-cogs"></i> Trang Quản Trị</h2>

    <div class="row mt-4">
        <!-- Quản lý thành viên -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-primary"></i>
                    <h5 class="mt-3">Thành viên</h5>
                    <p>@Model.TotalUsers Thành viên</p>
                    <a href="/Admin/ManageUsers" class="btn btn-primary">Quản lý</a>
                </div>
            </div>
        </div>

        <!-- Quản lý sản phẩm -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-box-open fa-3x text-success"></i>
                    <h5 class="mt-3">Sản phẩm</h5>
                    <p>@Model.TotalProducts Sản phẩm</p>
                    <a href="/Admin/ManageProducts" class="btn btn-success">Quản lý</a>
                </div>
            </div>
        </div>

        <!-- Quản lý đơn hàng -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-basket fa-3x text-warning"></i>
                    <h5 class="mt-3">Đơn hàng</h5>
                    <p>@Model.TotalOrders Đơn hàng</p>
                    <a href="/Admin/ManageOrders" class="btn btn-warning">Quản lý</a>
                </div>
            </div>
        </div>

        <!-- Báo cáo doanh số -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x text-danger"></i>
                    <h5 class="mt-3">Báo cáo</h5>
                    <p>@Model.TotalRevenue.ToString("C") Doanh thu</p>
                    <a href="/Admin/SalesReport" class="btn btn-danger">Xem báo cáo</a>
                </div>
            </div>
        </div>
    </div>
</div>
