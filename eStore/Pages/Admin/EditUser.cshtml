@page "{id:int}"
@model eStore.Pages.Admin.EditUserModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="text-center text-warning">Chỉnh Sửa Người Dùng</h2>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="memberId" value="@Model.MemberId" />
        <div class="form-group">
            <label>Email:</label>
            <input type="email" name="email" class="form-control" value="@Model.Email" required />
        </div>
        <div class="form-group">
            <label>Công Ty:</label>
            <input type="text" name="companyName" class="form-control" value="@Model.CompanyName" required />
        </div>
        <div class="form-group">
            <label>Thành Phố:</label>
            <input type="text" name="city" class="form-control" value="@Model.City" required />
        </div>
        <div class="form-group">
            <label>Quốc Gia:</label>
            <input type="text" name="country" class="form-control" value="@Model.Country" required />
        </div>
        <div class="form-group">
            <label>Mật khẩu mới (để trống nếu không muốn thay đổi):</label>
            <input type="password" name="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Lưu Thay Đổi</button>
    </form>
</div>
