@page
@model eStore.Pages.Admin.EditProductModel
@{
    Layout = "_AdminLayout";
}

<div class="container mt-4">
    <h2 class="text-center text-warning">Chỉnh Sửa Sản Phẩm</h2>

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="ProductId" value="@Model.Product.ProductId" />

        <div class="form-group">
            <label>Tên sản phẩm</label>
            <input name="ProductName" class="form-control" value="@Model.Product.ProductName" required />
        </div>

        <div class="form-group">
            <label>Giá</label>
            <input name="UnitPrice" type="number" step="0.01" class="form-control" value="@Model.Product.UnitPrice" required />
        </div>

        <div class="form-group">
            <label>Số lượng</label>
            <input name="UnitsInStock" type="number" class="form-control" value="@Model.Product.UnitsInStock" required />
        </div>

        <div class="form-group">
            <label>Danh mục</label>
            <select name="CategoryId" class="form-control" required>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId" selected="@(Model.Product.CategoryId == category.CategoryId ? "selected" : null)">
                        @category.CategoryName
                    </option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-warning">Lưu</button>
        <a href="/Admin/ManageProducts" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
